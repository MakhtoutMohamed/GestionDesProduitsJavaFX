<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ProductController" spacing="10" alignment="TOP_CENTER" stylesheets="@../style/style.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Gestion des Produits" styleClass="title"/>

    <HBox spacing="10">
        <TextField fx:id="nameField" promptText="Nom du produit"/>
        <TextField fx:id="priceField" promptText="Prix"/>
        <Button text="Ajouter" onAction="#handleAddProduct"/>
    </HBox>

    <ListView fx:id="productListView" prefHeight="200"/>
</VBox>
